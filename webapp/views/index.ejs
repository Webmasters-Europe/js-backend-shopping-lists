<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include(`${root}/views/partials/head`, { title: 'Shopping Lists - Dashboard', cssFile: 'index.css', jsFile: 'index.js' }) %>
    </head>
    <body>
        <%- include(`${root}/views/partials/layoutOpen`) %>
            <%- include(
                `${root}/views/partials/navbar`,
                { addButton: true, username: typeof username !== 'undefined' ? username : 'Username' }
            ) %>
            <div class="lists-container">
                <% if (typeof lists !== 'undefined') { %>
                    <% for (const list of lists) { %>
                        <% for (const [listId, entries] of Object.entries(list)) { %>
                            <%- include(`${root}/views/partials/shoppingList`, { listId: listId, entries: entries}) %>
                        <% } %>
                    <% } %>
                <% } %>
            </div>
        <%- include(`${root}/views/partials/layoutClose`) %>
    </body>
</html>
